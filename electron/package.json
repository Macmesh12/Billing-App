{
  "name": "billing-app-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Local-first billing app with Django backend and Electron frontend",
  "homepage": "https://github.com/Macmesh12/Billing-App",
  "author": {
    "name": "Billing App",
    "email": "support@billingapp.local"
  },
  "scripts": {
    "dev": "concurrently \"npm:django\" \"npm:electron\"",
    "django": "python ../backend/manage.py runserver 127.0.0.1:8765",
    "electron": "wait-on http://127.0.0.1:8765 && electron .",
    "package": "electron-builder",
    "package:win": "electron-builder --win nsis",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux deb"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-updater": "^5.4.0"
  },
  "build": {
    "appId": "com.billingapp.desktop",
    "productName": "BillingApp",
    "copyright": "Copyright Â© 2025",
    "publish": null,
    "icon": "build/icon.png",
    "files": [
      "**/*",
      "!node_modules/.cache/**",
      "!backend/.venv/**",
      "!backend/**/__pycache__/**",
      "!backend/**/*.pyc",
      "!python/**"
    ],
    "asarUnpack": [
      "backend/**/*",
      "app/**/*",
      "python/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "app.asar.unpacked/backend",
        "filter": [
          "**/*",
          "!.venv/**",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!*.log"
        ]
      },
      {
        "from": "python",
        "to": "app.asar.unpacked/python",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.business"
    }
  }
}
